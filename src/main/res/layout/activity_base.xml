<?xml version="1.0" encoding="utf-8"?>
<com.example.mytest.activity.Main.BaseMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base_Menu"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/subject_menu_fixed"/>

        <LinearLayout
            android:id="@+id/base_Lltitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/base_rlTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/DarkGray">

                <Button
                    android:id="@+id/base_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/base_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="标题"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/base_right"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/base_right2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/base_right"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/base_rlMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/school_menu"/>
    </LinearLayout>
</com.example.mytest.activity.Main.BaseMenu>