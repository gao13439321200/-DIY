<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
    <ImageView
        android:id="@+id/item_other_message_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/item_other_message_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:text=""
        android:textColor="@color/black"
        android:paddingEnd="10dp"
        android:paddingStart="5dp"
        android:gravity="center"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/item_other_message_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/item_other_message_time"
        android:layout_toEndOf="@+id/item_other_message_img"
        android:text=""
        android:textColor="@color/black"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center|left"
        android:textSize="18sp"
        />

</RelativeLayout>