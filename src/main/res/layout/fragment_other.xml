<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/other_rl_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/other_layout_click"
        android:clickable="true">

        <ImageView
            android:id="@+id/other_Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/other_tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/other_middle"
            android:layout_toEndOf="@+id/other_Picture"
            android:text="永远的回忆"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/other_tv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/other_middle"
            android:layout_toEndOf="@+id/other_Picture"
            android:text="账号：gaopeng1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"/>

        <View
            android:id="@+id/other_middle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/other_rl_message"
        style="@style/otherButtonStyle"
        android:layout_marginTop="15dp"
        android:text="消息"
        />

    <Button
        android:id="@+id/other_rl_kefu"
        style="@style/otherButtonStyle"
        android:text="客服"
        />

    <Button
        android:id="@+id/other_rl_course"
        style="@style/otherButtonStyle"
        android:layout_marginTop="15dp"
        android:text="激活课程"
        />

    <Button
        android:id="@+id/other_rl_updata"
        style="@style/otherButtonStyle"
        android:text="检查更新"
        />

    <Button
        android:id="@+id/other_rl_setting"
        style="@style/otherButtonStyle"
        android:text="设置"
        />

</LinearLayout>